<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.iit.dp.dp_pos.controller.CustomerListController"
      spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2); -fx-padding: 30;">
    <!-- Header Section -->
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,2);">
        <Label text="👥 Customer List" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
        <Label text="View and manage all customers" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
    </VBox>

    <!-- Search Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10px; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5,0,0,1);">
        <Label text="🔍" style="-fx-font-size: 18px;" />
        <TextField fx:id="searchField" promptText="Search customers by name or email..." prefWidth="300"
                   style="-fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: #ddd; -fx-background-color: white; -fx-padding: 8 12;" />
    </HBox>

    <!-- Statistics Cards (placeholders, as controller does not provide stats) -->
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" style="-fx-background-color: rgba(76, 175, 80, 0.1); -fx-background-radius: 10px; -fx-padding: 15; -fx-min-width: 120; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 3,0,0,1);">
            <Label fx:id="totalCustomersLabel" text="-" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" />
            <Label text="Total Customers" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>
    </HBox>

    <!-- Customer Table -->
    <VBox style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,2);" VBox.vgrow="ALWAYS">
        <TableView fx:id="customerTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <placeholder>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="👥" style="-fx-font-size: 48px;" />
                    <Label text="No customers found" style="-fx-font-size: 16px; -fx-text-fill: #999;" />
                    <Label text="Try adjusting your search" style="-fx-font-size: 12px; -fx-text-fill: #ccc;" />
                </VBox>
            </placeholder>
        <columns>
                <TableColumn fx:id="nameColumn" text="Customer Name" prefWidth="250"
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="250"
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
        </columns>
    </TableView>
    </VBox>

    <!-- Bottom Navigation -->
    <HBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10px; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5,0,0,1);">
        <Button text="← Back to Dashboard" onAction="#onBackClick"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10 20; -fx-font-weight: bold;" />
    </HBox>

</VBox> 