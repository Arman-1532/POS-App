<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.iit.dp.dp_pos.controller.OrderHistoryController"
      spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2); -fx-padding: 30;">
    <!-- Header Section -->
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,2);">
        <Label text="🧾 Order History" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
        <Label text="View all past orders and their details" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
    </VBox>

    <!-- Order Table -->
    <VBox style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,2);" VBox.vgrow="ALWAYS">
        <TableView fx:id="orderTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <placeholder>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="🧾" style="-fx-font-size: 48px;" />
                    <Label text="No orders found" style="-fx-font-size: 16px; -fx-text-fill: #999;" />
                    <Label text="Try adjusting your search" style="-fx-font-size: 12px; -fx-text-fill: #ccc;" />
                </VBox>
            </placeholder>
        <columns>
                <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="150"
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="productNameColumn" text="Product Name" prefWidth="150"
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="totalColumn" text="Total" prefWidth="100"
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" />
        </columns>
    </TableView>
    </VBox>

    <!-- Bottom Navigation -->
    <HBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10px; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5,0,0,1);">
        <Button text="← Back to Dashboard" onAction="#onBackClick"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10 20; -fx-font-weight: bold;" />
    </HBox>

</VBox> 