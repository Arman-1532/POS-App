<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.iit.dp.dp_pos.controller.ManageProductsController" 
      spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2); -fx-padding: 30;">
    
    <!-- Header Section -->
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,2);">
        <Label text="âž• Manage Products" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
        <Label text="Add new products and manage existing inventory" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
    </VBox>
    
    <!-- Add New Product Section -->
    <VBox style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5,0,0,1);">
        <Label text="âž• Add New Product" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1976d2; -fx-padding: 0 0 15 0;" />
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="newProductNameField" promptText="Product Name" prefWidth="200"
                       style="-fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: #ddd; -fx-background-color: white; -fx-padding: 8 12;" />
            <TextField fx:id="newProductPriceField" promptText="Price" prefWidth="150"
                       style="-fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: #ddd; -fx-background-color: white; -fx-padding: 8 12;" />
            <Button text="âž• Add Product" onAction="#onAddProductClick"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10 20; -fx-font-weight: bold;" />
        </HBox>
        <Label fx:id="messageLabel" style="-fx-text-fill: #F44336; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
    </VBox>
    
    <!-- Product Table -->
    <VBox style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,2);" VBox.vgrow="ALWAYS">
        <Label text="ðŸ“¦ Current Products" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1976d2; -fx-padding: 0 0 15 0;" />
        <TableView fx:id="productTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <placeholder>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="ðŸ“¦" style="-fx-font-size: 48px;" />
                    <Label text="No products available" style="-fx-font-size: 16px; -fx-text-fill: #999;" />
                    <Label text="Add your first product above" style="-fx-font-size: 12px; -fx-text-fill: #ccc;" />
                </VBox>
            </placeholder>
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="80" 
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="nameColumn" text="Product Name" prefWidth="250" 
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="120" 
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="120" 
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
                <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150" 
                             style="-fx-background-color: #f8f9fa; -fx-font-weight: bold;" />
            </columns>
        </TableView>
    </VBox>
    
    <!-- Bottom Navigation -->
    <HBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10px; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5,0,0,1);">
        <Button fx:id="backButton" text="â† Back to Dashboard" onAction="#onBackClick"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10 20; -fx-font-weight: bold;" />
    </HBox>
    
</VBox> 