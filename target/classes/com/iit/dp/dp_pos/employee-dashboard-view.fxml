<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iit.dp.dp_pos.controller.EmployeeDashboardController" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2)">
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: rgba(255,255,255,0.92); -fx-background-radius: 16px; -fx-padding: 40 40 40 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 16,0,0,4); -fx-min-width: 400px; -fx-max-width: 500px; -fx-min-height: 400px; -fx-max-height: 600px;">
        <Label text="Employee Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976d2; -fx-padding: 0 0 10 0;" />
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="productListButton" text="Product List" onAction="#onProductListClick" style="-fx-background-color: linear-gradient(to right, #FFEB3B, #FFF176); -fx-text-fill: #5D4037; -fx-font-size: 18px; -fx-font-weight: 800; -fx-background-radius: 12px; -fx-min-width: 150px; -fx-min-height: 100px; -fx-max-width: 180px; -fx-max-height: 100px; -fx-cursor: hand; -fx-border-color: transparent; -fx-border-radius: 12px; -fx-wrap-text: true;" />
            <Button fx:id="customerListButton" text="Customer List" onAction="#onCustomerListClick" style="-fx-background-color: linear-gradient(to right, #FFEB3B, #FFF176); -fx-text-fill: #5D4037; -fx-font-size: 18px; -fx-font-weight: 800; -fx-background-radius: 12px; -fx-min-width: 150px; -fx-min-height: 100px; -fx-max-width: 180px; -fx-max-height: 100px; -fx-cursor: hand; -fx-border-color: transparent; -fx-border-radius: 12px; -fx-wrap-text: true;" />
        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="orderListButton" text="Order List" onAction="#onOrderListClick" style="-fx-background-color: linear-gradient(to right, #FFEB3B, #FFF176); -fx-text-fill: #5D4037; -fx-font-size: 18px; -fx-font-weight: 800; -fx-background-radius: 12px; -fx-min-width: 150px; -fx-min-height: 100px; -fx-max-width: 180px; -fx-max-height: 100px; -fx-cursor: hand; -fx-border-color: transparent; -fx-border-radius: 12px; -fx-wrap-text: true;" />
            <Button fx:id="createSaleButton" text="Create Sale" onAction="#onCreateSaleClick" style="-fx-background-color: linear-gradient(to right, #FFEB3B, #FFF176); -fx-text-fill: #5D4037; -fx-font-size: 18px; -fx-font-weight: 800; -fx-background-radius: 12px; -fx-min-width: 150px; -fx-min-height: 100px; -fx-max-width: 180px; -fx-max-height: 100px; -fx-cursor: hand; -fx-border-color: transparent; -fx-border-radius: 12px; -fx-wrap-text: true;" />
        </HBox>
        <HBox spacing="20" alignment="CENTER">
<!--            <Button fx:id="backToLoginButton" text="Back to Login" onAction="#onBackToLoginClick" style="-fx-background-color: linear-gradient(to right, #FFEB3B, #FFF176); -fx-text-fill: #5D4037; -fx-font-size: 18px; -fx-font-weight: 800; -fx-background-radius: 12px; -fx-min-width: 150px; -fx-min-height: 100px; -fx-max-width: 180px; -fx-max-height: 100px; -fx-cursor: hand; -fx-border-color: transparent; -fx-border-radius: 12px; -fx-wrap-text: true;" />-->
        </HBox>
    </VBox>
</StackPane>

